{
	"name": "shoppa-frontend-ts",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^5.11.6",
		"@testing-library/react": "^11.2.2",
		"@testing-library/user-event": "^12.5.0",
		"@types/jest": "^26.0.16",
		"@types/react-router-dom": "^5.1.6",
		"axios": "^0.21.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.1",
		"web-vitals": "^0.2.4"
	},
	"scripts": {
		"build:tailwind1": "tailwindcss build src/styles/index.css -o src/styles/output.css",
		"watch:tailwind": "chokidar 'src/**/*.css' 'src/**/*.scss' --ignore src/styles/output.css -c 'npm run build:css'",
		"prestart": "npm run build:css",
		"prebuild": "npm run build:css",
		"start2": "react-scripts start && npm run watch",
		"start": "npm-run-all --parallel watch:tailwind start:react",
		"start:react": "react-scripts start",
		"build": "npm run build:css && react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"watch": "watch 'npm run build:css' ./src/",
		"build:css": "postcss src/styles/index.css  -o src/styles/output.css"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/node": "^12.19.8",
		"@types/react": "^16.14.2",
		"@types/react-dom": "^16.9.10",
		"@types/react-helmet": "^6.1.0",
		"autoprefixer": "^10.0.4",
		"chokidar-cli": "^2.1.0",
		"cssnano": "^4.1.10",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.1.14",
		"postcss-cli": "^8.3.0",
		"prettier": "^2.2.1",
		"stylelint-config-recommended": "^3.0.0",
		"tailwindcss": "^2.0.1",
		"typescript": "^4.1.2"
	}
}
